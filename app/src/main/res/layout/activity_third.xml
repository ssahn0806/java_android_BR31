<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@android:id/tabhost">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TabWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@android:id/tabs"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@android:id/tabcontent">
            <LinearLayout
                android:id="@+id/tabStep1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg4"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#80000000">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbarFadeDuration="0"
                        android:scrollbarThumbVertical="@color/colorPrimary"
                        android:scrollbarStyle="insideInset">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e1"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e2"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e3"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e4"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e5"
                                />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="처음으로"
                                android:textSize="25dp"
                                android:textColor="#000000"
                                android:id="@+id/btn_return1"
                                android:background="@drawable/text_bg"/>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tabStep2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg5"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbarFadeDuration="0"
                        android:scrollbarThumbVertical="@color/colorPrimary"
                        android:scrollbarStyle="insideInset">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e6"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e7"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e8"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e9"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e10"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e11"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e12"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e13"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e14"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e15"
                                />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="처음으로"
                                android:textSize="25dp"
                                android:textColor="#000000"
                                android:id="@+id/btn_return2"
                                android:background="@drawable/text_bg"/>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tabStep3"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg6"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#80000000">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbarFadeDuration="0"
                        android:scrollbarThumbVertical="@color/colorPrimary"
                        android:scrollbarStyle="insideInset">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e16"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e17"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e18"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e19"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e20"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e21"
                                />
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="400dp"
                                android:layout_gravity="center"
                                android:src="@drawable/e22"
                                />
                            <ImageView
                            android:layout_width="300dp"
                            android:layout_height="400dp"
                            android:layout_gravity="center"
                            android:src="@drawable/e23"
                            />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="처음으로"
                                android:textSize="25dp"
                                android:textColor="#000000"
                                android:id="@+id/btn_return3"
                                android:background="@drawable/text_bg"/>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</TabHost>